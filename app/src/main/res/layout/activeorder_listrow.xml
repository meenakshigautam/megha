<?xml version="1.0" encoding="utf-8"?>


  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">



  <android.support.v7.widget.CardView
      android:id="@+id/cv_offer_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      app:cardCornerRadius="5dp"
      >



    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        >




     <TextView
      android:id="@+id/nametext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text = "Vendor Name"
      android:textColor = "@color/primarytextcolor"
         android:padding="3dp"
      />




    <TextView
        android:id="@+id/pricetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Delivery Price"
        android:textColor = "@color/primarytextcolor"
        android:layout_alignParentRight="true"
        android:padding="3dp"
        />


     <RelativeLayout
        android:id="@+id/relative56"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/pricetext"
        android:layout_alignParentRight="true" >


       <TextView
        android:id="@+id/ordertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Id:"
        android:textColor="#000000"
           android:layout_marginRight="8dp"
           android:paddingTop = "3dp"
            />


    <TextView
        android:id="@+id/ordernotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#45667"
        android:textColor="#000000"
        android:layout_toRightOf="@id/ordertext"
        android:layout_marginRight="10dp"
        android:paddingTop = "3dp"
        />


     </RelativeLayout>


    <TextView
        android:id="@+id/datetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Dec 2017"
        android:textColor="#000000"
        android:layout_below="@id/relative56"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:padding="3dp"
        />



      <View
      android:id="@+id/dotLine"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_below="@+id/datetext"
      android:layout_marginTop="5dp"
      android:background="#D3D3D3"
      android:textSize="15sp"
          />


  <TextView
      android:id="@+id/mark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="P"
      android:background="@drawable/rounded_textview"
      android:textColor="@android:color/white"
      android:gravity="center"
      android:layout_below="@id/dotLine"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="3dp"
      />


   <TextView
       android:id="@+id/pickuplocationtext"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Pick up Location"
       android:layout_toRightOf="@id/mark"
       android:layout_below="@id/dotLine"
       android:layout_marginTop="15dp"
       android:layout_marginLeft="8dp"
       android:textColor="#000000"
       />


  <TextView
      android:id="@+id/pickuplocationdetailtext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Parsanath extension,Whitefield,Bangalore"
      android:layout_toRightOf="@id/mark"
      android:layout_below="@id/pickuplocationtext"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="8dp"
      android:textColor="#000000"/>



  <TextView
      android:id="@+id/droptext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="D"
      android:background="@drawable/rounded_textview"
      android:textColor="@android:color/white"
      android:gravity="center"
      android:layout_below="@id/pickuplocationdetailtext"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="3dp"

      />


  <TextView
      android:id="@+id/droplocation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Drop Location"
      android:layout_toRightOf="@id/mark"
      android:layout_below="@id/pickuplocationdetailtext"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="8dp"
      android:textColor="#000000"
      />


  <TextView
      android:id="@+id/droplocationdetailtext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Parsanath extension,Whitefield,Bangalore"
      android:layout_toRightOf="@id/mark"
      android:layout_below="@id/droplocation"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="8dp"

      android:textColor="#000000"/>


    <Button
        android:id="@+id/acceptedbutton"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text ="Accept Order"
        android:layout_below="@id/droplocationdetailtext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background = "@color/primarytextcolor"
        android:textColor="#FFFFFF"
        />

    </RelativeLayout>

   </android.support.v7.widget.CardView>

  </RelativeLayout>
